doctype html
html
  head
    title Login page, person registry
    link(rel="stylesheet" link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")
  body
    h1(style="padding-left:1%") Login page, person registry   
    form(class="form-group", action='/login', method='POST')
      div(class="form-control-lg")
       input(class="form-control-lg", type="text", name="email", placeholder="User email")
       input(class="form-control-lg", type="text", name="password", placeholder="User password")
      div(class="form-control-lg")
       input(class="btn btn-primary", type="submit", value="Login to the registry")
      h3= loginfailedmessage